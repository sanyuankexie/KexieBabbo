<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visualdust.kexiebabbo">
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_csta_bgwhite_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_csta_bgwhite_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityInterveneRequest"></activity>
        <activity android:name=".shortcuts.SCRequestSignout" />
        <activity android:name=".shortcuts.SCRequestSignin" />
        <activity android:name=".ActivityAttendance" />
        <activity
            android:name=".ActivityBookshelf"
            android:label="@string/title_activity_bookshelf"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
    </application>

</manifest>